<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

    <changeSet id="2" author="Jared Lanoue">

        <createTable tableName="pokemon_types">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="pokemon_id" type="int"/>
            <column name="types_id" type="int"/>
        </createTable>

    </changeSet>

    <changeSet id="6" author="Jared Lanoue">

        <createTable tableName="pokemon_egg_groups">
            <column name="id" type="int"/>
            <column name="pokemon_id" type="int"/>
            <column name="egg_groups_id" type="int"/>
        </createTable>

    </changeSet>

    <changeSet id="7" author="Jared Lanoue">

        <createTable tableName="pokemon_abilities">
            <column name="id" type="int"/>
            <column name="pokemon_id" type="int"/>
            <column name="abilities_id" type="int"/>
        </createTable>

    </changeSet>

</databaseChangeLog>